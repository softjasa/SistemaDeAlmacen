<% if current_user.rol == "tecnico" || current_user.rol == "gerente" || current_user.rol == "secre" %>
<% title "Buscar cliente" %>
<h1>Cliente con nombre <%=@name%></h1>
<%= render "clients_controller/clients" %>
<DIV Align=left>
<%= button_to 'Volver', clients_path, :method => :get, :class => 'btn btn-default' %><br>
</DIV>

<%else%>
    <%flash[:danger] = "ACCESO RESTRINGIDO"%>
    <center><img src="/images/candado.png"></center>
  <%end%>
<%end%>
