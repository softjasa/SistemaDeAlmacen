<% if current_user %>
    <% if current_user.rol == "admin" || current_user.rol == "gerente" %>	
	<% title "Editar Categoria" %>

	<h1><%=@category.name%></h1>
	<center>
	<%= render 'form' %>
	<br>

	</center>
	<div align="left">
		<%= button_to 'Volver', categories_path, :method => :get, class: "btn btn-default"  %>
	</div>
	<%else%>
		<%flash[:danger] = "ACCESO RESTRINGIDO"%>
		<center><img src="/images/candado.png"></center>
	<%end%>
<%end%>
